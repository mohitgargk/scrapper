import json
import time


from scrap.Nifty50Scrapper import Nifty50Scrapper


with open('./config.json') as json_data_file:
    cfg = json.load(json_data_file)
print(cfg)

frequency = cfg['frequency']
scrappers = list()

while True :

    # Add nifty50
    nifty50config = cfg["nifty50"]
    ts = long(time.time())
    niftyScrapper = Nifty50Scrapper(nifty50config["name"], cfg["basePath"], nifty50config["url"], ts )

    scrappers.append(niftyScrapper)

    for scrapper in scrappers:
        scrapper.start()

    for scrapper in scrappers:
        scrapper.join()

    print("Completed Scrapping at ts=" + str(ts))
    scrappers = list()

    time.sleep(frequency)


print("Exiting...")




